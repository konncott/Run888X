-- Toggle
local toggleLabel = Instance.new("TextLabel", frame)
toggleLabel.Text = "‡πÄ‡∏õ‡∏¥‡∏î‡πÇ‡∏´‡∏°‡∏î SpeedHack"
toggleLabel.Position = UDim2.new(0, 16, 0, 125)
toggleLabel.Size = UDim2.new(0.7, 0, 0, 24)
