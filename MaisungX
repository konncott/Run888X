-- Slider
local sliderLabel = Instance.new("TextLabel", frame)
sliderLabel.Text = "‡∏õ‡∏£‡∏±‡∏ö‡∏Ñ‡πà‡∏≤ Speed"
sliderLabel.Position = UDim2.new(0, 16, 0, 50)
